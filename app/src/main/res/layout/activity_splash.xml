<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grd_bg_splash"
    tools:context=".ui.activities.SplashActivity">

    <TextView
        android:id="@+id/txtPoweredBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/powerd_by_enema"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/futura_medium_bt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtAppVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:fontFamily="@font/futura_medium_bt"
        android:text="@string/version_1_0_0"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@+id/txtPoweredBy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imgEnemaLogo"
        android:layout_width="0dp"
        android:layout_height="236dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:contentDescription="@string/enema_logo"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/enema_logo" />

    <TextView
        android:id="@+id/txtWeConnect"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/futura_light_bt"
        android:gravity="center"
        android:padding="10dp"
        android:shadowColor="#cf1d1d"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="8"
        android:text="@string/we_connect"
        android:textColor="@color/colorWhite"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imgEnemaLogo"
        app:layout_constraintStart_toStartOf="@+id/imgEnemaLogo"
        app:layout_constraintTop_toBottomOf="@+id/imgEnemaLogo"
        tools:ignore="SmallSp" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/ring_border_no_gravity"
        app:layout_constraintBottom_toBottomOf="@+id/txtWeConnect"
        app:layout_constraintEnd_toEndOf="@+id/txtWeConnect"
        app:layout_constraintStart_toStartOf="@+id/txtWeConnect"
        app:layout_constraintTop_toTopOf="@+id/txtWeConnect" />

</android.support.constraint.ConstraintLayout>